<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_black"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="2dp"
            android:id="@+id/fixup_type"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/fixup_address"
            android:layout_weight="0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold"
            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/list_cost"/>
            <TextView
                android:layout_marginTop="3dp"
                android:textAlignment="center"
                android:id="@+id/fixup_price_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Before" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/list_bed" />

                <TextView
                    android:id="@+id/fixup_bed"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="Bedroom"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_bath" />

                <TextView
                    android:id="@+id/fixup_bath"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="Bathroom"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_area" />

                <TextView
                    android:id="@+id/fixup_area"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Area"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_lot_size" />

                <TextView
                    android:id="@+id/fixup_lot"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="LotSize"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/list_rent" />

                <TextView
                    android:id="@+id/fixup_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Rent"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_hoa" />

                <TextView
                    android:id="@+id/fixup_hoa"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="HOA"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_rp" />

                <TextView
                    android:id="@+id/fixup_pr"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="PR"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/list_ps" />

                <TextView
                    android:id="@+id/fixup_ps"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="PS"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_weight="0.3"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/border_grey"
                android:padding="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_remodel"/>
                    <TextView
                        android:paddingLeft="3dp"
                        android:textSize="10sp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After Remodel Estimate"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="3dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:id="@+id/fixup_price_after"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price After" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>